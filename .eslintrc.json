{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": ["standard-with-typescript", "plugin:unicorn/recommended", "prettier"],
    "overrides": [
        {
            "files": [ "src/**/*.ts" ]
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["./tsconfig.json"]
    },
    "rules": {
        "unicorn/no-null": 0,
        "@typescript-eslint/strict-boolean-expressions": 0,
        "@typescript-eslint/no-misused-promises": 0
    }
}
